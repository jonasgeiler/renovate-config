{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Preset with base configuration, best practices and some custom/personal additions.",
	"extends": [
		"config:best-practices",
		"npm:unpublishSafe",

		"regexManagers:dockerfileVersions",
		"regexManagers:githubActionsVersions",
		"regexManagers:gitlabPipelineVersions",
		"regexManagers:helmChartYamlAppVersions",
		"regexManagers:mavenPropertyVersions",
		"regexManagers:tfvarsVersions",

		":timezone(Europe/Vienna)",
		"schedule:weekly",

		":automergeBranch",
		":automergePatch",
		":automergeLinters",
		":automergeTesters",
		":automergeTypes",
		"schedule:automergeDaily",

		":semanticCommits",
		":gitSignOff",

		":reviewer(jonasgeiler)",
		":label(dependencies)",
		":enableVulnerabilityAlertsWithLabel(security)"
	]
}
