# EditorConfig configuration
# See: https://editorconfig.org

root = true

[*]
indent_style             = tab
indent_size              = tab
#tab_width               = 4
end_of_line              = lf
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true
max_line_length          = 80

[*.{json,yml,yaml,md,mdx}]
indent_style = space
indent_size  = 2

[*.json]
insert_final_newline = false

[*.{md,mdx}]
trim_trailing_whitespace = false
