{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Base config with best practices and some opioniated/personal addtions",
	"extends": [
		"config:best-practices",
		":disableDigestUpdates",
		"npm:unpublishSafe",

		":timezone(Europe/Vienna)",
		"schedule:weekly",

		":automergeBranch",
		":automergePatch",
		":automergeLinters",
		":automergeTesters",
		":automergeTypes",
		"schedule:automergeDaily",

		":semanticCommits",
		":gitSignOff",

		":assignAndReview(jonasgeiler)",
		":label(dependencies)",
		":enableVulnerabilityAlertsWithLabel(security)"
	]
}
